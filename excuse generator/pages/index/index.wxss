}
.shadow {
		position: absolute;
		display: block;
		/* content: ''; */
    /* right: 20rpx; */
		width: 150px;
		height: 150px;
		border-radius: 100%;
		background: #708B75;
		z-index: 0;
		animation: pulse 1.2s ease infinite;
    /* transform: translateY(-100rpx); */
	}
	
	a {
		color: #e85454;
		font-size: 18px;
	}


/* Animation */
/* --------- */
@keyframes growing {
	 0% {
		  transform: scale(1, 1);
	 }
	 10% {
		  transform: scale(0.925, 0.925);
	 }
	 30% {
		  transform: scale(1.025, 1.025);
	 }
	 50% {
		  transform: scale(1, 1);
	 }
}
@keyframes pulse {
	  0% {
			 transform: scale(1, 1);
		  }
	  50% {
			 opacity: 0.3;
	  }
	  100% {
			 transform: scale(1.5);
			 opacity: 0;
	  }
}
