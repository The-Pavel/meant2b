.job {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20px; 
  /* border: 3rpx solid #468CC8; */
}

/* Body design */

.job-content {
  position: relative;
  width: 80vw;
  height: 15vh;
  /* border: 3rpx solid #468CC8; */
}

.job-body {
  /* border: 3rpx solid #468CC8; */
  margin: 0;
  padding: 0;
  font-size: 10px;
  font-weight: lighter;
  position: absolute;
  bottom: 0;
   left: 0;
  right: 0; 
}

.h3 {
  position: absolute;
  top: 17px;
  right: 5px;
  width: 50vw;
  text-align: center;
  font-size: 15px;
}

.company-logo {
  position: absolute;
  top: 0;
  left: 1vw;
  width: 10vw;
  height: 10vh;
  border-radius:50%;
  background-size: 100%;
  background-repeat: no-repeat;
}

