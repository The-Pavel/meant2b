<!--pages/resshow/resshow.wxml-->
<text>pages/resshow/resshow.wxml</text>

<view class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <view class="banner-content">
    <view class="h1">{{ restaurant.name }}</view>
    
    <view class="controls">
      <image src="/image/edit.png" class="icon" bindtap="editRestaurant" data-id="{{id}}" />
      <image src="/image/recycling-bin.png" class="icon" bindtap="deleteRestaurant" data-id="{{id}}" />
    </view>
  </view>
</view>